num1=int(input("enter a number 1 "))
num2=int(input("enter a number 2 "))
num3=int(input("enter a number 3 "))

#by using if else

if num1 >= num2 and num1 >= num3:
    largest=num1
    print(" largest number is ",largest)
elif num2 >= num1 and num2 >= num3:
    largest=num2
    print(" largest number is",largest)
else:
    largest=num3
    print(" largest number is",largest)
